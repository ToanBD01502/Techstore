{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-5 col-5 justify-content-center">
        <h1>Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.first_name) }}
            {{ form_row(registrationForm.last_name) }}
            {{ form_row(registrationForm.address) }}
            {{ form_row(registrationForm.phonenumber) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn-danger rounded-2 btn-block mb-4">Register</button>
            <div class="text-center">
                <p>or sign up with:</p>
                <button type="button" class="btn btn-danger btn-floating mx-1 rounded-5">
                  <i class="fab fa-facebook-f text-light"></i>
                </button>
            
                <button type="button" class="btn btn-danger btn-floating mx-1 rounded-5">
                  <i class="fab fa-google text-light"></i>
                </button>
            
                <button type="button" class="btn btn-danger btn-floating mx-1 rounded-5">
                  <i class="fab fa-twitter text-light"></i>
                </button>
            
                <button type="button" class="btn btn-danger btn-floating mx-1 rounded-5">
                  <i class="fab fa-github text-light"></i>
                </button>
              </div>
        {{ form_end(registrationForm) }}
    </div>

    
{% endblock %}
