{% block body %}
<!-- Advertising Banner Start -->
<div class="container-fluid pb-3 pt-5">
    <div class="row px-xl-5">
        <div class="col-md-6">
            <a href="" data-ad-type="horizontal">
                <img class="img-fluid" src="images/adv1.webp" alt="Advertising Banner">
            </a>
        </div>
        <div class="col-md-6">
            <a href="" data-ad-type="horizontal">
                <img class="img-fluid" src="images/adv2.webp" alt="Advertising Banner">
            </a>
        </div>
    </div>
</div>
<!-- Advertising Banner End -->

<!-- Featured brand start -->
<section class="section section-brands mt-2 ml-5">
    <div class="container-fluid">
        <div class="section-heading">    
            <div class="box-header">
                <h2 class="hTitle">
                    <svg width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M13 1L16.3213 3.29839H20.4189L21.6787 7L25 9.29839L23.7402 13L25 16.7016L21.6787 19L20.4189 22.7016H16.3213L13 25L9.67869 22.7016H5.58112L4.32131 19L1 16.7016L2.25981 13L1 9.29839L4.32131 7L5.58112 3.29839H9.67869L13 1Z" fill="#FF3C53" stroke="#FF3C53" stroke-width="2" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"></path>
                        <path d="M11.9614 17.7126C11.5706 18.1121 11.0429 18.3352 10.4938 18.3332C9.94465 18.3311 9.41858 18.1042 9.0305 17.7019L6.75439 15.345C6.18277 14.7531 6.19316 13.7953 6.78557 13.225C7.3468 12.6654 8.24062 12.6869 8.78106 13.2465L10.4959 15.0222L17.1788 8.10236C17.74 7.52122 18.6442 7.52122 19.2054 8.10236L19.247 8.1454C19.8082 8.72654 19.8082 9.67358 19.2366 10.2547L11.9614 17.7126Z" fill="white"></path>
                    </svg>
                    <a href="/">Featured brand</a>
                </h2>
            </div>
        </div>
        <div class="section-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <a class="item-img boxlazy-img" href="/search?type=product&amp;q=filter=((title%3Aproduct%20**%20acer)%7C%7C(tag%3Aproduct%3Dacer)%7C%7C(sku%3Aproduct**acer))%26%26(price%3Aproduct%3E100)" aria-label="Acer">
                            <img data-src="https://file.hstatic.net/200000636033/file/rectangle_259_eea1812015b14bc995ba6e17a9ffcd6a.png" src="https://file.hstatic.net/200000636033/file/rectangle_259_eea1812015b14bc995ba6e17a9ffcd6a.png" alt="Acer" class=" ls-is-cached lazyloaded img-fluid">
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a class="item-img boxlazy-img" href="/pages/pc-amd" aria-label="Banner">
                            <img data-src="https://file.hstatic.net/200000636033/file/rectangle_260_aedfdd6ec9904428a4566f426e42b175.png" src="https://file.hstatic.net/200000636033/file/rectangle_260_aedfdd6ec9904428a4566f426e42b175.png" alt="Banner" class=" ls-is-cached lazyloaded img-fluid">
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a class="item-img boxlazy-img" href="/pages/asus-official-store" aria-label="Banner">
							<img data-src="https://file.hstatic.net/200000636033/file/rectangle_261_91f4f7211c994176905b6bb2074e7b85.png" src="https://file.hstatic.net/200000636033/file/rectangle_261_91f4f7211c994176905b6bb2074e7b85.png" alt="Banner" class=" ls-is-cached lazyloaded">
						</a>
                    </div>
                    <div class="col-md-3">
                        <a class="item-img boxlazy-img" href="/pages/corsair-icue" aria-label="Banner">
							<img data-src="https://file.hstatic.net/200000636033/file/rectangle_263_1c5818cf69ec48a79bd139d945b014be.png" src="https://file.hstatic.net/200000636033/file/rectangle_263_1c5818cf69ec48a79bd139d945b014be.png" alt="Banner" class=" ls-is-cached lazyloaded">
						</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Featured brand end -->

<!-- Categories Start -->
<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Categories</span>
    </h2>
    <div class="row px-xl-5 pb-3">
        {% for category in category %}
        <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
            <a class="text-decoration-none" href="{{ path('app_productofcate', {'id': category.id})}}">
                <div class="cat-item d-flex align-items-center mb-4">
                    <div class="overflow-hidden" style="width: 100px; height: 100px;">
                        <img class="img-fluid" src="{{ asset('uploads/sanpham/' ~ category.getPhoto()) }}" alt="">
                    </div>
                    <div class="flex-fill pl-3">
                        <h6>{{ category.getName() }}</h6>
                        {# <small class="text-body">30 Products</small> #}
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
</div>
<!-- Categories End -->
{% endblock %}