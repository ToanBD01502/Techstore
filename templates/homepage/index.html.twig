{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
<!-- Carousel Start -->
<div class="container-fluid mb-3 mt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#header-carousel" data-slide-to="1"></li>
                    <li data-target="#header-carousel" data-slide-to="2"></li>
                    <li data-target="#header-carousel" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item position-relative active" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="images/carousel-1.webp"
                            style="object-fit: cover;">
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="images/carousel-2.webp"
                            style="object-fit: cover;">
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="images/carousel-4.webp"
                            style="object-fit: cover;">
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="images/carousel-5.webp"
                            style="object-fit: cover;">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="images/offer-4.png" alt="">
            </div>
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="images/offer-5.png" alt="">
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->

<!-- Featured Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Quality Product</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                <h1 class="fa fa-shipping-fast text-primary m-0 mr-2"></h1>
                <h5 class="font-weight-semi-bold m-0">Free Shipping</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                <h1 class="fas fa-exchange-alt text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">14-Day Return</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">24/7 Support</h5>
            </div>
        </div>
    </div>
</div>
<!-- Featured End -->


<!-- Categories Start -->
<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Categories</span>
    </h2>
    <div class="row px-xl-5 pb-3">
        {% for category in category %}
        <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
            <a class="text-decoration-none" href="{{ path('app_productofcate', {'id': category.id})}}">
                <div class="cat-item d-flex align-items-center mb-4">
                    <div class="overflow-hidden" style="width: 100px; height: 100px;">
                        <img class="img-fluid" src="{{ asset('uploads/sanpham/' ~ category.getPhoto()) }}" alt="">
                    </div>
                    <div class="flex-fill pl-3">
                        <h6>{{ category.getName() }}</h6>
                        {# <small class="text-body">30 Products</small> #}
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
</div>

<!-- Categories End -->


<!-- Products Start -->
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Featured Products</span>
    </h2>
    <div class="row px-xl-5">
        {% for sp in data %}
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1" title="{{ sp.getName()}}">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        <img class="img-fluid w-100" src="{{ asset('uploads/sanpham/' ~ sp.getPhoto()) }}" alt="">
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href="">{{ sp.getName() }}</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>{{ sp.getPrice() }} $</h5>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-2">
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small>(99)</small>
                        </div>
                        <div class="btn" title="Add to cart">
                            <form method="post" action="{{ path('app_cart_add', {'product_id': sp.getId()}) }}">
                                <button class="btn btn-outline-danger btn-light rounded-2 pl-3 pr-3" type="submit" id="add-to-cart">
                                    <i class="bi bi-bag-plus-fill"></i>
                                </button>
                            </form>                                            
                        </div>
                        <div class="btn" title="View detail">
                            <a class="btn btn-outline-danger btn-light rounded-2 pl-3 pr-3" href="{{ path('app_detailsp', {'id': sp.id}) }}"><i class="bi bi-eye-fill"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            {% if loop.index is divisible by(4) or loop.last %}
                </div><div class="row px-xl-5">
            {% endif %}
        {% endfor %}
        <div class="pagination justify-content-center p-3">
            {% set pageCount = data.pageCount %}
            {% set currentPage = data.current %}
                    
            {% if currentPage != 1 %}
                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'page': 1})) }}" class="btn btn-outline-danger btn-light rounded-2 pl-3 pr-3 mx-1">First</a>
            {% endif %}
                
            {% for page in 1..pageCount %}
                {% if currentPage != page %}
                    <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'page': page})) }}" class="{{ (page==app.request.get('page'))?"active":"" }} btn btn-outline-danger btn-light rounded-3 pl-3 pr-3 mx-1">{{ page }}</a>
                {% else %}
                    <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'page': page})) }}" class="{{ (page==app.request.get('page'))?"active":"" }} btn btn-danger btn-light rounded-3 pl-3 pr-3 mx-1">{{ page }}</a>
                {% endif %}
            {% endfor %}
            <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'page': pageCount})) }}" class="btn btn-outline-danger btn-light rounded-2 pl-3 pr-3 mx-1">Last</a>
        </div>                                                                                       
    </div>
</div>
<!-- Products End -->
{% endblock %}
