{% form_theme order_form 'bootstrap_5_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block title %}Cart manager{% endblock %}

{% block body %}
<div class="container">
    <div class="py-5 text-center">
      <h2>Checkout form</h2>
    </div>

    <div class="row">
      <div class="col-md-5 order-md-4 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-muted">Your cart</span>
        </h4>
        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0 mr-3">Product name</h6>
            </div>
            <div>
              <span class="text ml-5">Quantity</span>
              <span class="ml-5">Unit price</span>
            </div>
          </li>
        </ul>
        {% for item in cart_manager.items %}
        <ul class="list-group mb-3">
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">{{ item.product.name }}</h6>
            </div>
            <div>
              <span class="text-muted mr-5">{{ item.quantity }}</span>
              <span class="ml-5">{{ item.product.price }}</span>
            </div>
          </li>
		{% endfor %}
          <li class="list-group-item d-flex justify-content-between">
            <h5 class="text-danger">Total (USD)</h5>
            <strong>{{ cart_manager.amount }}</strong>
          </li>
        </ul>

      </div>
      <div class="col-md-7 order-md-1">
        <h4 class="mb-3">Billing address</h4>
        {{ form_start(order_form) }}
        {{ form_widget(order_form) }}
        <input type="submit" value="Confirm" class="btn btn-danger rounded-2 text-light"/>
    {{ form_end(order_form) }}
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
{% if message is not empty %}
    <script> alert("{{ message }}");</script>
{% endif %}
{% endblock %}
