          $('#search').select2({
            width:'80%',
            closeOnSelect: false,
            minimumInputLength:3,
            ajax: {
              url: "{{ path('search_api') }}",
              data: function (params) {
                $('#keyword').val(params.term)
                
                $('#select2-search-container').html(params.term)
                var query = {
                  keyword: params.term,
                }
                return query;
              },
              dataType: 'json',
              processResults: function (data) {
                return {results: $.map(data, function (obj) {
                  return {
                    id: obj.id,
                    text: obj.name,
                    photo:obj.photo
                  };
                })}
                
              }

